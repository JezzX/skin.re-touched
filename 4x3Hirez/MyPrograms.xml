<window id="1">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views>50,500</views>
	<controls>
		<include>CommonBackground</include>
		<include>Clock</include>
		<include>CommonNowPlaying</include>
		<control type="grouplist">
			<description>Top Left bar</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1000</width>
			<height>64</height>
			<align>left</align>
			<itemgap>5</itemgap>
			<orientation>horizontal</orientation>
			<include>HomeButtonCommons</include>
			<control type="label">
				<description>Window label</description>
				<include>WindowTitleCommons</include>
				<width min="0" max="300">auto</width>
				<label>  $LOCALIZE[0]</label>
			</control>
			<control type="label">
				<description>Folder label</description>
				<include>WindowTitleCommons</include>
				<width min="0" max="1000">auto</width>
				<label>$INFO[Container.FolderName,[COLOR=blue] > [/COLOR]]</label>
			</control>
		</control>
		<control type="grouplist">
			<description>Top Right bar</description>
			<posx>680</posx>
			<posy>0</posy>
			<width>600</width>
			<height>64</height>
			<align>right</align>
			<itemgap>5</itemgap>
			<orientation>horizontal</orientation>
			<include>BatteryLevelReadOut</include>
		</control>
		<control type="group">
			<include>Window_OpenClose_Animation_Zoom</include>		
			<include>CommonRootView</include> <!-- view id = 50 -->
			<include>ThumbnailView</include> <!-- view id = 500 -->
		</control>
		<include>MediaSubMenu</include>
		<include>ScrollOffsetLabel</include>
		<include>SortOrderCommon</include>
		<include>BehindDialogFadeOut</include>
	</controls>
</window>
